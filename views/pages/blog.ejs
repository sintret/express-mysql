<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/standart-head %>
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blogs</title>
    <style type="text/css">
        .clear {
            clear:both;
        }
        .btn-info {
            margin-right:15px;
            text-transform:uppercase;
            padding:10px;
            display:block;
            float:left;
        }
        .btn-info a {
            display:block;
            text-decoration:none;
            width:100%;
            height:100%;
            color:#fff;
        }
        .more.label {
            float:right;
        }
    </style>

</head>
<body>
<% include ../partials/menu %>

<div class="container">
    <% include ../function/helpers %>

    <% if(results.length) { %>
    <% results.forEach(function(result) {%>
    <div class="span8">
        <h1><%= result.title%></h1>
        <p><%= removeTags(result.description.substring(0,110)) -%></p>


        <div>
            <div class="more label"><a href="#">Read more</a></div>
            <div class="tags">
                <span class="btn-info"><a href="#">energy</a></span><span class="btn-info"><a href="#">reality</a></span><span class="btn-info"><a href="#">world</a></span>
            </div>
        </div>
        <div class="clear"></div>
        <hr>
    </div>
    <% });} %>

    <% if (count > 1) { %>
    <ul class="pagination">
        <% if (currentPage > 1) { %>
        <li><a href="/blog?page=1">&laquo;</a></li>
        <% } %>
        <% var i = 1;
            if (currentPage > 5) {
                i = +currentPage - 4;
            } %>
        <% if (i !== 1) { %>
        <li class="disabled"><a href="#">...</a></li>
        <% } %>
        <% for (i; i<=count; i++) { %>
        <% if (currentPage == i) { %>
        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
        <% } else { %>
        <li><a href="/blog?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == (+currentPage + 4)) { %>
        <li class="disabled"><a href="#">...</a></li>
        <% break; } %>
        <% } %>
        <% if (currentPage != count) { %>
        <li><a href="/blog?page=<%= count %>">&raquo;</a></li>
        <% } %>
    </ul>
    <% } %>


</div> <!-- /container -->
<% include ../partials/footer %>

</body>
</html>